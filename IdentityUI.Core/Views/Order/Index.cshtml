@using Microsoft.AspNetCore.Authorization;

@{
    Layout = null;
}
@inject IAuthorizationService AuthorizationService;

    <h1> Permission.Order.Read, Permission.Order.Delete, Permission.Stock.Delete</h1>
    <br />
    @if (AuthorizationService.AuthorizeAsync(User, "Permission.Order.Read").Result.Succeeded)
    {
        <button class="btn btn-danger">Permission.Order.Read</button>
    }
    @if (AuthorizationService.AuthorizeAsync(User, "Permission.Order.Read").Result.Succeeded)
    {
        <button class="btn btn-primary">Permission.Order.Delete</button>
    }
    @if (AuthorizationService.AuthorizeAsync(User, "Permission.Order.Read").Result.Succeeded)
    {
        <button class="btn btn-info">Permission.Stock.Delete</button>
    }

