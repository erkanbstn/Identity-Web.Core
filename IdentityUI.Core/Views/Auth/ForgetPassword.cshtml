@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<h1>Identity Core Forget Password</h1>
<br />
<hr />
<br />
<div class="alert alert-danger" asp-validation-summary="ModelOnly">
</div>
<br />
<form method="post">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email Adresi</label>
        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="text-danger"></span>
        <div id="emailHelp" class="form-text text-danger">Şifre Yenileme Linki, E-Posta Adresinize Gönderilecektir.</div>
    </div>
    <button type="submit" class="btn btn-primary">Link Gönder</button>
</form>
<br />
@if (TempData["success"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["success"]
    </div>
}
