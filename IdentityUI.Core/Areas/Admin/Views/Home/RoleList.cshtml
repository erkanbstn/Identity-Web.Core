@model List<RoleViewModel>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>Identity Core Roles</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Rol</th>
        <th colspan="2">Aksiyon</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a href="~/Admin/Home/RemoveRole/@item.Id" class="btn btn-danger">Sil</a>
                <a href="~/Admin/Home/EditRole/@item.Id" class="btn btn-success">Düzenle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="~/Admin/Home/NewRole" class="btn btn-primary">Yeni Rol Ekle</a>
