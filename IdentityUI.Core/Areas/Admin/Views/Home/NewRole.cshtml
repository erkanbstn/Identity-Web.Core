@model RoleViewModel
@{
    ViewData["Title"] = "NewRole";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<h1>Identity Core New Role</h1>
<br />
<hr />
<div>
    <form method="post" asp-route-returnurl="@Context.Request.Query["returnURL"]">
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Rol Adı</label>
            <input type="text" class="form-control" asp-for="Name" id="exampleInputPassword1">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
    </form>
</div>
<br />


